<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="default" namespace="/" extends="struts-default">
		<action name="addClient" method="add" class="com.formation.actions.ListClientAction">
			<result name="success" type="redirectAction">listClient</result>
		</action>
		<action name="deleteClient" method="delete" class="com.formation.actions.ListClientAction">
			<result name="success" type="redirectAction">listClient</result>
		</action>
		<action name="listClient" method="listClient" class="com.formation.actions.ListClientAction">
			<result name="success">/accueilClient.jsp</result>
		</action>
		<action name="updateClient" method="majChamp" class="com.formation.actions.UpdateClientAction">
			<result name="success">/modifClient.jsp</result>
		</action>
		<action name="majClient" method="update" class="com.formation.actions.UpdateClientAction">
			<result name="success" type="redirectAction">listClient</result>
		</action>
	</package>
</struts>