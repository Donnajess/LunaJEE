<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="default" namespace="/" extends="struts-default">
		<action name="addArticle" method="add"
			class="com.formation.actions.ListArticleAction">
			<result name="success" type="redirectAction">listArticle</result>
		</action>
		<action name="listArticle" method="listArticle"
			class="com.formation.actions.ListArticleAction">
			<result name="success">/accueilArticle.jsp</result>
		</action>
		<action name="deleteArticle" method="delete"
			class="com.formation.actions.ListArticleAction">
			<result name="success" type="redirectAction">listArticle</result>
		</action>

	</package>
</struts>